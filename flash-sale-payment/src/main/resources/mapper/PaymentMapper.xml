<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flashsale.payment.mapper.PaymentMapper">

    <resultMap id="BaseResultMap" type="com.flashsale.payment.entity.Payment">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="order_no" property="orderNo" jdbcType="VARCHAR"/>
        <result column="pay_no" property="paymentNo" jdbcType="VARCHAR"/>
        <result column="pay_type" property="paymentMethod" jdbcType="INTEGER"/>
        <result column="pay_amount" property="amount" jdbcType="DECIMAL"/>
        <result column="pay_status" property="status" jdbcType="INTEGER"/>
        <result column="pay_time" property="paymentTime" jdbcType="TIMESTAMP"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, order_no, pay_no, pay_type, pay_amount, pay_status, pay_time, create_time, update_time
    </sql>

    <!-- 插入支付记录 -->
    <insert id="insert" parameterType="com.flashsale.payment.entity.Payment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO payment_info (order_no, pay_no, pay_type, pay_amount, pay_status, pay_time, create_time, update_time)
        VALUES (#{orderNo}, #{paymentNo}, #{paymentMethod}, #{amount}, #{status}, #{paymentTime}, #{createTime}, #{updateTime})
    </insert>

    <!-- 根据ID查找支付记录 -->
    <select id="findById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM payment_info
        WHERE id = #{id}
    </select>

    <!-- 根据订单号查找支付记录 -->
    <select id="findByOrderNo" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM payment_info
        WHERE order_no = #{orderNo}
        ORDER BY create_time DESC
        LIMIT 1
    </select>

    <!-- 根据支付流水号查找支付记录 -->
    <select id="findByPaymentNo" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM payment_info
        WHERE pay_no = #{paymentNo}
    </select>

    <!-- 根据ID更新支付记录 -->
    <update id="updateById" parameterType="com.flashsale.payment.entity.Payment">
        UPDATE payment_info
        <set>
            <if test="orderNo != null">order_no = #{orderNo},</if>
            <if test="paymentNo != null">pay_no = #{paymentNo},</if>
            <if test="paymentMethod != null">pay_type = #{paymentMethod},</if>
            <if test="amount != null">pay_amount = #{amount},</if>
            <if test="status != null">pay_status = #{status},</if>
            <if test="paymentTime != null">pay_time = #{paymentTime},</if>
            update_time = #{updateTime}
        </set>
        WHERE id = #{id}
    </update>

    <!-- 更新支付状态 -->
    <update id="updateStatus">
        UPDATE payment_info
        SET pay_status = #{status}, update_time = NOW()
        WHERE id = #{id}
    </update>

</mapper> 
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flashsale.payment.mapper.PaymentMapper">

    <resultMap id="BaseResultMap" type="com.flashsale.payment.entity.Payment">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="order_id" property="orderId" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="payment_no" property="paymentNo" jdbcType="VARCHAR"/>
        <result column="third_party_payment_no" property="thirdPartyPaymentNo" jdbcType="VARCHAR"/>
        <result column="amount" property="amount" jdbcType="DECIMAL"/>
        <result column="payment_method" property="paymentMethod" jdbcType="INTEGER"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="payment_time" property="paymentTime" jdbcType="TIMESTAMP"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, order_id, user_id, payment_no, third_party_payment_no, amount, payment_method, status, payment_time, create_time, update_time, remark
    </sql>

    <!-- 插入支付记录 -->
    <insert id="insert" parameterType="com.flashsale.payment.entity.Payment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO payment (order_id, user_id, payment_no, third_party_payment_no, amount, payment_method, status, payment_time, create_time, update_time, remark)
        VALUES (#{orderId}, #{userId}, #{paymentNo}, #{thirdPartyPaymentNo}, #{amount}, #{paymentMethod}, #{status}, #{paymentTime}, #{createTime}, #{updateTime}, #{remark})
    </insert>

    <!-- 根据ID查找支付记录 -->
    <select id="findById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM payment
        WHERE id = #{id}
    </select>

    <!-- 根据订单ID查找支付记录 -->
    <select id="findByOrderId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM payment
        WHERE order_id = #{orderId}
        ORDER BY create_time DESC
        LIMIT 1
    </select>

    <!-- 根据支付流水号查找支付记录 -->
    <select id="findByPaymentNo" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM payment
        WHERE payment_no = #{paymentNo}
    </select>

    <!-- 根据用户ID查找支付记录列表 -->
    <select id="findByUserId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM payment
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>

    <!-- 分页查询用户支付记录 -->
    <select id="findByUserIdWithPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM payment
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <!-- 统计用户支付记录总数 -->
    <select id="countByUserId" parameterType="java.lang.Long" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM payment
        WHERE user_id = #{userId}
    </select>

    <!-- 根据ID更新支付记录 -->
    <update id="updateById" parameterType="com.flashsale.payment.entity.Payment">
        UPDATE payment
        <set>
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="paymentNo != null">payment_no = #{paymentNo},</if>
            <if test="thirdPartyPaymentNo != null">third_party_payment_no = #{thirdPartyPaymentNo},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="paymentMethod != null">payment_method = #{paymentMethod},</if>
            <if test="status != null">status = #{status},</if>
            <if test="paymentTime != null">payment_time = #{paymentTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            update_time = #{updateTime}
        </set>
        WHERE id = #{id}
    </update>

    <!-- 更新支付状态 -->
    <update id="updateStatus">
        UPDATE payment
        SET status = #{status}, update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 更新支付信息 -->
    <update id="updatePaymentInfo">
        UPDATE payment
        SET third_party_payment_no = #{thirdPartyPaymentNo}, 
            status = #{status}, 
            update_time = NOW()
        WHERE id = #{id}
    </update>

</mapper> 